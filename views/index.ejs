<%- include("templates/header") %>
    <% if (req.session.authenticated) { %>
        <div class="px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold">Hello, <%= req.session.name %>
            </h1>
            <div class="col-lg-6 mx-auto">
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3"
                        onclick="window.location.href='/members'">Go to Members Area</button>
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4"
                        onclick="window.location.href='/logout'">Logout</button>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="px-4 py-5 my-5 text-center">
            <div class="col-lg-6 mx-auto">
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3"
                        onclick="window.location.href='/signup'">Sign up</button>
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4"
                        onclick="window.location.href='/login'">Log in</button>
                </div>
            </div>
        </div>
    <% } %>
<%- include("templates/footer") %>
